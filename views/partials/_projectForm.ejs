<button type="button" class="btn btn-success p-2 border border-black rounded" data-bs-toggle="modal"
    data-bs-target="#exampleModal">Create New Project</button>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create a new Project:- </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="border border-light border-3" action="/Project/Create" method="POST">
                    <div class="mb-3">
                        <label for="projectname" class="col-form-label">Project Name:</label>
                        <input type="text" class="form-control" id="recipient-name" name="projectname" required>
                    </div>
                    <div class="mb-3">
                        <label for="author" class="col-form-label">Author:</label>
                        <input type="text" class="form-control" id="recipient-name" name="author" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="col-form-label">Description:</label>
                        <textarea class="form-control" id="message-text" name="description" required></textarea>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create project</button>
            </div>
            </form>

        </div>
    </div>
</div>